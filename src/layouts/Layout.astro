---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="/scripts/themeToggle.js" defer></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--background-light: #ffffff;
		--background-dark: #13151a;
		--text-light: #000000;
		--text-dark: #ffffff;
		--card-background-color-light: #f9f9f9;
		--card-background-color-dark: #23262d;
		--card-hover-background-color-light: rgba(249, 249, 249, 0.9);
		--card-hover-background-color-dark: rgba(35, 38, 45, 0.9);
		--badge-background-color-light: #e0e0e0;
		--badge-background-color-dark: #23262d;
		--badge-text-color-light: #000000;
		--badge-text-color-dark: #ffffff;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	main {
		flex: 1;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	[data-theme="light"] {
		background: var(--background-light);
		color: var(--text-light);
		--card-background-color: var(--card-background-color-light);
		--card-hover-background-color: var(--card-hover-background-color-light);
		--badge-background-color: var(--badge-background-color-light);
		--badge-text-color: var(--badge-text-color-light);
		--text-color: var(--text-light);
	}

	[data-theme="dark"] {
		background: var(--background-dark);
		color: var(--text-dark);
		--card-background-color: var(--card-background-color-dark);
		--card-hover-background-color: var(--card-hover-background-color-dark);
		--badge-background-color: var(--badge-background-color-dark);
		--badge-text-color: var(--badge-text-color-dark);
		--text-color: var(--text-dark);
	}
</style>

