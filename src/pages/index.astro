---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="EvickaStudio">
  <Header />
  <main class="main-content">
    <section class="intro">
      <h1>Welcome to EvickaStudio</h1>
      <p>Explore my projects and learn more about my work.</p>
    </section>
    <section class="about">
      <h2>About Me</h2>
      <p>Brief introduction about yourself, your background, and your interests.</p>
    </section>
    <section class="skills">
      <h2>Skills</h2>
      <ul class="skills-list">
        <li>JavaScript</li>
        <li>React</li>
        <li>Node.js</li>
        <!-- Add more skills as needed -->
      </ul>
    </section>
    <section class="projects">
      <h2>Projects</h2>
      <ul role="list" class="card-grid">
        <Card
          href="https://github.com/EvickaStudio/portfolio-website"
          title="Portfolio"
          body="The current website you are looking at. It is build using Astro with Svelte and TailwindCSS."
          imgSrc="https://cdn.evickastudio.de/static/media/evickastudio_pic.svg"
          badges={["astro", "svelte", "tailwindcss"]}
        />
        <Card
          href="https://github.com/EvickaStudio/Moodle-Mate"
          title="MoodleMate"
          body="Program to fetch Moodle notifications at regular intervals, summarize their content, and send it to you via webhook to Discord."
          imgSrc="https://cdn.evickastudio.de/static/media/moodemate_cover.png"
          badges={["education", "python", "gpt-3", "gpt-4", "moodle"]}
        />
        <Card
          href="https://github.com/EvickaStudio/portfolio-website"
          title="Portfolio"
          body="The current website you are looking at. It is build using Astro with Svelte and TailwindCSS."
          imgSrc="https://cdn.evickastudio.de/static/media/evickastudio_pic.svg"
          badges={["astro", "svelte", "tailwindcss"]}
        />
        <Card
          href="https://github.com/EvickaStudio/Moodle-Mate"
          title="MoodleMate"
          body="Program to fetch Moodle notifications at regular intervals, summarize their content, and send it to you via webhook to Discord."
          imgSrc="https://cdn.evickastudio.de/static/media/moodemate_cover.png"
          badges={["education", "python", "gpt-3", "gpt-4", "moodle"]}
        />
        <Card
          href="https://github.com/EvickaStudio/portfolio-website"
          title="Portfolio"
          body="The current website you are looking at. It is build using Astro with Svelte and TailwindCSS."
          imgSrc="https://cdn.evickastudio.de/static/media/evickastudio_pic.svg"
          badges={["astro", "svelte", "tailwindcss"]}
        />
        <Card
          href="https://github.com/EvickaStudio/Moodle-Mate"
          title="MoodleMate"
          body="Program to fetch Moodle notifications at regular intervals, summarize their content, and send it to you via webhook to Discord."
          imgSrc="https://cdn.evickastudio.de/static/media/moodemate_cover.png"
          badges={["education", "python", "gpt-3", "gpt-4", "moodle"]}
        />
      </ul>
    </section>
    <section class="contact">
      <h2>Contact</h2>
      <p>Feel free to <a href="/contact">reach out</a> if you have any questions or opportunities.</p>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .main-content {
    padding: 2rem;
    max-width: 1200px;
    margin: auto;
  }

  .intro, .about, .skills, .projects, .contact {
    margin-bottom: 2rem;
  }

  .skills-list {
    list-style: none;
    padding: 0;
  }

  .skills-list li {
    background: #23262d;
    padding: 0.5rem;
    margin: 0.5rem 0;
    border-radius: 8px;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    padding: 0;
    margin: 0;
    width: 100%;
  }

  .card-grid > * {
    min-height: 300px;
  }

  .intro h1 {
    font-size: 2.5rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 1rem;
  }

  .intro p {
    font-size: 1.25rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .about h2, .skills h2, .projects h2, .contact h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .about p, .skills-list, .contact p {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .skills-list li {
    font-size: 1rem;
  }

  .projects h2 {
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .card-grid {
    position: relative;
    z-index: 0;
  }
</style>
